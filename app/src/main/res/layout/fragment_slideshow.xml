<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".fragments.SlideshowFragment">

    <TextView
        android:id="@+id/tvShowCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:text="Count will be shown here: "
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnIncreaseCountBy1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Count By 1"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnIncreaseCountBy2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Count By 2"
        />

</LinearLayout>